{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@providers/*": ["src/providers/*"],
      "@utils/*": ["src/utils/*"],
      "@materials/*": ["src/materials/*"]  // <-- add this line
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/vite-env.d.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.*",
    "vitest.config.*",
    "postcss.config.*",
    "tailwind.config.*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}